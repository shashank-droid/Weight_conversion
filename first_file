def bmi():

    Weight = input("Eneter your weight ")

    a = input("KG or LB ")
    b = int(Weight) * 2
    c = int(Weight) // 2
    if a == "KG":
        print("the weight is in pounds ", +b)
    elif a == "LB":
        print("The weight is in kgs ", +c)


check = input(" do you want to check your weight? Enter y or n = ")
